# -------------------------------------------------
# Vault connection
# -------------------------------------------------

# Vault server address (e.g. https://vault.example.com:8200)
VAULT_ADDR=<VAULT_ADDRESS>

# Vault access token
VAULT_TOKEN=<VAULT_TOKEN>

# Skip TLS verification (true/false)
VAULT_SKIP_VERIFY=false

# -------------------------------------------------
# TLS configuration
# -------------------------------------------------

# CA that signed the Vault server certificate
VAULT_CACERT=<PATH_TO_VAULT_CA_CERT>

# Client certificate (mTLS), if used
VAULT_CLIENT_CERT=<PATH_TO_VAULT_CLIENT_CERT>
VAULT_CLIENT_KEY=<PATH_TO_VAULT_CLIENT_KEY>

# -------------------------------------------------
# Path to secrets
# -------------------------------------------------

# Local or relative path to Vault configuration
VAULT_PATH=<PATH_TO_VAULT_PATH>

# -------------------------------------------------
# Vault logical layout
# -------------------------------------------------

# KV v2 mount
VAULT_MOUNT=<VAULT_MOUNT_NAME>

# -------------------------------------------------
# Secret paths (RELATIVE to the mount)
# -------------------------------------------------

# Database credentials
VAULT_DB=<DATABASE_SECRET_PATH>

# Wallet credentials (optional)
VAULT_WALLET=<WALLET_SECRET_PATH>

# Federation / crypto material
VAULT_F_PRIV_KEY=<FEDERATION_PRIVATE_KEY_PATH>
VAULT_F_PUB_PKEY=<FEDERATION_PUBLIC_KEY_PATH>
VAULT_F_CERT=<FEDERATION_CERTIFICATE_PATH>
